<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Images">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/next"
        android:textColor="@color/yellow"
        android:textSize="24sp"
        android:id="@+id/nextBtn"
        android:onClick="handleNext"/>


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_sampo"
        android:id="@+id/sampo"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/sampo"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_sample"
        android:id="@+id/sample"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/sample"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_sample_2"
        android:id="@+id/sample_2"/>


</RelativeLayout>